@model HomeVM
@{
    ViewData["Title"] = "Home Page";
}

<!-- Categories -->
<div class="text-center m-3">
    @if (Model.Categories != null)
    {
        @foreach (var item in Model.Categories)
        {
            <a asp-controller="Home"
               asp-action="Index"
               asp-route-categoryId="@item.Id"
               class="badge bg-warning m-1">
                @item.Name
            </a>
        }
    }
</div>

<!-- Posts -->
<div class="row pb-3">
    @foreach (var item in Model?.Posts)
    {
        <div class="col-lg-4 col-md-6 col-sm-12 mb-5">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@item.FeatureImagePath"
                             class="card-img-top rounded large-img"
                             alt="Post Image" />
                        <div class="card-body pb-0 text-center">
                            <h5 class="card-title text-uppercase text-dark opacity-75 mb-2">
                                @item.Title
                            </h5>
                            <p class="text-warning mb-2"><b>Title:</b> @item.Title</p>
                            <p class="text-secondary mb-2"><b>Content:</b> @item.Content</p>
                            <p class="text-secondary mb-2"><b>Author:</b> @item.Author</p>
                            <p class="text-secondary mb-2"><b>Category:</b> @item.Category?.Name</p>
                        </div>
                        <div class="mt-3">
                            <a asp-action="Details"
                               asp-route-itemId="@item.Id"
                               asp-controller="Home"
                               class="btn btn-primary bg-gradient border-0 form-control">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <!-- Previous button -->
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-categoryId="@Model.CategoryId"
                   asp-route-PageNumber="@(Model.CurrentPage - 1)">
                    Previous
                </a>
            </li>

            <!-- Page numbers -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-categoryId="@Model.CategoryId"
                       asp-route-PageNumber="@i">
                        @i
                    </a>
                </li>
            }

            <!-- Next button -->
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-categoryId="@Model.CategoryId"
                   asp-route-PageNumber="@(Model.CurrentPage + 1)">
                    Next
                </a>
            </li>
        </ul>
    </nav>
}
