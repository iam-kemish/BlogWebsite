@model PostDetailsVM

<form method="post">
    <div class="container mt-5">
       
        <div class="card shadow border-0">
            <div class="card-header bg-primary bg-gradient text-white py-4">
                <div class="text-center">
                    <h3 class="text-uppercase fw-bold">Post Details</h3>
                    <p class="text-white-50 fw-semibold mb-0">See the details of the Post below</p>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Product Image -->
                    <div class="col-12 col-lg-4 text-center mb-4">
                        <img src="@Model.post?.FeatureImagePath" class="img-fluid rounded shadow-sm" alt="Post Image" />
                    </div>
                    <!-- Product Details -->
                    <div class="col-12 col-lg-8">
                        <h4 class="fw-bold text-dark">@Model.post?.Title</h4>
                        <div class="mb-3">
                            <span class="badge bg-secondary">@Model.post?.Category?.Name</span>
                        </div>
                        <p class="text-muted">@Model.post?.Content</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Author:</strong> @Model.post?.Author</li>
                           
                        </ul>

                  

                        <div class="mt-4 d-flex gap-3">
                            <a asp-action="Index" class="btn btn-outline-secondary fw-semibold">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                           

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
<form asp-controller="Home" asp-action="AddComment" method="post">

  
    <input type="hidden" asp-for="@Model.comment.PostId" />

    <div class="mb-3">
        <label>User name</label>
        <input type="text"  asp-for="comment.UserName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Comment</label>
        <textarea class="form-control" asp-for="comment.Content" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Add Comment</button>
</form>
<div class="mt-5">
    <h5>Comments (@(Model.post.Comments?.Count ?? 0))</h5>

    @if (Model.post.Comments?.Any() == true)
    {
        @foreach (var c in Model.post.Comments.OrderByDescending(x => x.CreatedDate))
        {
            <div class="border-start border-4 border-primary ps-3 mb-4">
                <strong>@c.UserName</strong>
                <small class="text-muted ms-2">— @c.CreatedDate.ToString("MMM dd, yyyy HH:mm")</small>
                <p class="mt-1 mb-0">@c.Content</p>
            </div>
        }
    }
    else
    {
        <p class="text-muted fst-italic">No comments yet.</p>
    }
</div>